{% block attribute_wysiwyg_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' cms-typography'
    }) %}

    <div {{ block('block_attributes') }}>
        {% if styles|length -%}
            {%- apply spaceless -%}
                <style type="text/css">{{ styles|render_content }}</style>
            {%- endapply -%}
        {%- endif %}
        {{ value|render_content }}
    </div>
{% endblock %}
